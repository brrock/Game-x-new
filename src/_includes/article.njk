---
    layout: 'base.njk'
---
    <article class="main-article  dark:text-white">
        <div class="container container--narrow flow">
            <h1 class="text-3xl top-16 absolute text-center">
                {{title}}
            </h1>
            <figure class="text-center min-h-full">
                <img src="{{ image }}" alt="{{ imageAlt }}">
                <figcaption>
                   {{ imageAlt }}
                </figcaption>
            </figure>
            {{content|safe}}
        </div>
    </article>
